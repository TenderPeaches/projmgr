<%= model_form_with(model: contact, url: (contact.new_record? ? contacts_path(client_id: options[:client_id] || nil) : contact_path(contact)), class: 'form', data: { turbo_stream: true }) do |form| %>
    <%= render "contacts/fields", form: form %>

    <%= tag.div class: "actions" do %>
        <%= form.submit %>
    <% end %>
<% end %>
