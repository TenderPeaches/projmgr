<!DOCTYPE html>
<html>
  <%= tag.head do %>
    <%= tag.title "ProjMgr" %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  <% end %>

  <%= tag.body do %>
    <%= tag.header do %>
      <%= render "layouts/header" %>
    <% end %>
    <%= tag.content do %>
      <%= yield %>
    <% end %>
    <%= tag.footer do %>
      <%= render "layouts/footer" %>
    <% end %>
  <% end %>
</html>