<%= tag.div id: dom_id(project), class: "panel" do %>
  <%= tag.div class: "header" do %>
    <%= tag.h2 project.name %>
    <% unless project.active %>
      <%= tag.h4 "Inactive", class: "label label--inactive" %>
    <% end %>
    <%= tag.span do %>
      Client: <%= link_to project.client.company_name, client_path(project.client) %>
    <% end %>
  <% end %>
  <%= tag.div class: "body" do %>
    <%= tag.div class: "actions" do %>
      <%= link_to "Timekeeping", new_shift_path, { class: "button button--primary"} %>
      <%= link_to "Edit", edit_project_path(project), { class: "button button--primary"} %>
    <% end %>
      <%= project_data project %>
      <% #  render partial: "task_hours", locals: { project: project } %>      
