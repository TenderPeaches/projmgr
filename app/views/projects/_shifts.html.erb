<%= tag.div class: "project__shifts" do %>
    <%= tag.table class: "list" do %>
        <%= tag.thead do %>
            <%= tag.tr do %>
                <%= tag.th do %><%= project.name %><% end %>
                <%= tag.th do %>Hours worked<% end %>
                <%= tag.th do %>Hours invoiced<% end %>
                <%= tag.th do %>Hours paid<% end %>
            <% end %>
        <% end %>
        <%= tag.tbody do %>
            <% project.tasks.each do |task| %>
                <%= tag.tr do %>
                    <%= tag.td task.task_category.name %>
                    <%= tag.td task.hours_worked %>
                    <%= tag.td "TBI" %>
                    <%= tag.td "TBI" %>
                <% end %>
            <% end %>
        <% end %>
        <tfoot>
        </tfoot>
    <% end %>
<% end %>