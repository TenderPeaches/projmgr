<%= form_with(model: project, html: { class: 'form'}) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :client_id %>
    <%= form.collection_select :client_id, Client.order(:id), :id, :company_name %>
    <%= link_to "Add client", new_client_path, { class: "btn btn--dark", style: "width: 100%; margin-top: 10px;"} %> <%# bad! change to stylesheets instead %>
  </div>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
