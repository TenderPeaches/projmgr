<%# generic update model action %>

<%# update the section title to "Models" %>
<%= turbo_stream.update model_title(model), model.class.model_name.human(count: 2) %>

<%# empty the relevant form %>
<%= turbo_stream.update_whichever model_form_name(model), :form  %>

<%# add the created model to the list %>
<%= turbo_stream.append model.model_name.plural.kebabcase do %>
    <%= render model %>
<% end %>