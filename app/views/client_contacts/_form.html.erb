<%= model_form_with(model: client_contact, class: 'form') do |form| %>
    <%= render "client_contacts/fields", form: form %>

    <%= tag.div do %>
        <%= turbo_link_button action_label(:new, ClientContact.new), new_client_contact_path(client_contact: client_contact) %>
        <%= tag.div id: "client-contact-form" %>
        <%= tag.div id: "client-contacts" %>
    <% end %>

    <%= tag.div class: "actions" do %>
        <%= form.submit %>
    <% end %>
<% end %>
